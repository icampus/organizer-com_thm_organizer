<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="general" label="THM_ORGANIZER_GENERAL_SETTINGS_TITLE"
              description="THM_ORGANIZER_GENERAL_SETTINGS_DESCRIPTION">
        <field name="loginPosition" type="modulesposition" label="THM_ORGANIZER_LOGIN_POSITION"
               description="THM_ORGANIZER_LOGIN_POSITION_DESC" maxlength="50" default=""/>
        <field name="dateFormat" type="text" label="THM_ORGANIZER_DATE_FORMAT"
               description="THM_ORGANIZER_DATE_FORMAT_DESC" size="40" required="true" default="d.m.Y"/>
        <field name="dateFormatShort" type="text" label="THM_ORGANIZER_DATE_FORMAT_SHORT"
               description="THM_ORGANIZER_DATE_FORMAT_SHORT_DESC" size="40" required="true" default="d.m"/>
        <field name="timeFormat" label="THM_ORGANIZER_TIME_FORMAT" description="THM_ORGANIZER_TIME_FORMAT_DESC"
               type="text" size="40" required="true" default="H:i"/>
        <field name="buildingRegex" type="text" label="THM_ORGANIZER_BUILDING_REGEX"
               description="THM_ORGANIZER_BUILDING_REGEX_DESC" class="inputbox color" size="40" required="false"/>
        <field name="emailFilter" type="text" label="THM_ORGANIZER_EMAIL_FILTER"
               description="THM_ORGANIZER_EMAIL_FILTER_DESC" class="inputbox color" size="40" required="false"/>
        <field name="backgroundColor" type="color" label="THM_ORGANIZER_BACKGROUND_COLOR"
               description="THM_ORGANIZER_BACKGROUND_COLOR_DESC" class="inputbox color" size="10" required="true"
               default="#eeeeee"/>
        <field name="lightTextColor" type="color" label="THM_ORGANIZER_TEXT_LIGHT_COLOR"
               description="THM_ORGANIZER_TEXT_LIGHT_COLOR_DESC" class="inputbox color" size="10" required="true"
               default="#eeeeee"/>
        <field name="darkTextColor" type="color" label="THM_ORGANIZER_TEXT_DARK_COLOR"
               description="THM_ORGANIZER_TEXT_DARK_COLOR_DESC" class="inputbox color" size="10" required="true"
               default="#4a5c66"/>
    </fieldset>
    <fieldset name="eCollab" label="THM_ORGANIZER_ECOLLAB_SETTINGS_TITLE"
              description="THM_ORGANIZER_ECOLLAB_SETTINGS_DESCRIPTION">
        <field name="eCollabLink" type="text" size="60" label="THM_ORGANIZER_URL"
               description="THM_ORGANIZER_ECOLLAB_DESC"/>
        <field name="displayeCollabLink" type="list" default="0" label="THM_ORGANIZER_ECOLLAB_DISPLAY"
               description="THM_ORGANIZER_ECOLLAB_DISPLAY_DESC">
            <option value='1'>JYES</option>
            <option value='0'>JNO</option>
        </field>
    </fieldset>
    <fieldset name="LSF-Service" label="THM_ORGANIZER_LSF_SETTINGS_TITLE"
              description="THM_ORGANIZER_LSF_SETTINGS_DESCRIPTION">
        <field name="wsURI" type="text" size="100" label="THM_ORGANIZER_LSF_URI"
               description="THM_ORGANIZER_LSF_URI_DESC"/>
        <field name="wsUsername" type="text" size="30" label="THM_ORGANIZER_LSF_USERNAME"
               description="THM_ORGANIZER_LSF_USERNAME_DESC"/>
        <field name="wsPassword" type="text" size="30" label="THM_ORGANIZER_PASSWORD"
               description="THM_ORGANIZER_LSF_PASSWORD_DESC"/>
    </fieldset>
    <fieldset name="monitors" label="THM_ORGANIZER_MONITORS"
              description="THM_ORGANIZER_MONITOR_SETTINGS_VIEW_DESCRIPTION">
        <field name="display" id="display" type="list" label="THM_ORGANIZER_DISPLAY_BEHAVIOUR"
               description="THM_ORGANIZER_DISPLAY_BEHAVIOUR_DESC" class="inputbox">
            <option value='1'>THM_ORGANIZER_DAILY_PLAN</option>
            <option value='2'>THM_ORGANIZER_MIXED_PLAN</option>
            <option value='3'>THM_ORGANIZER_CONTENT_DISPLAY</option>
            <option value='4'>THM_ORGANIZER_LESSON_LIST</option>
        </field>
        <field name="schedule_refresh" id="schedule_refresh" type="integer" label="THM_ORGANIZER_SCHEDULE_REFRESH_RATE"
               description="THM_ORGANIZER_SCHEDULE_REFRESH_RATE_DESC" first="10" last="990" step="10" default="60"/>
        <field name="content_refresh" id="content_refresh" type="integer" label="THM_ORGANIZER_CONTENT_REFRESH"
               description="THM_ORGANIZER_CONTENT_REFRESH_DESC" first="10" last="990" step="10" default="60"/>
        <field name="content" id="content" type="filelist" label="THM_ORGANIZER_DISPLAY_CONTENT"
               description="THM_ORGANIZER_DISPLAY_CONTENT_DESC" directory="images/thm_organizer/" exclude=""/>
    </fieldset>
    <fieldset name="prepCourse" label="THM_ORGANIZER_PREP_COURSES">
        <field name="representativeName" type="text" label="THM_ORGANIZER_REPRESENTATIVE"
               description="THM_ORGANIZER_REPRESENTATIVE_DESC" size="60" default="Prof. Dr. Matthias Willems"/>
        <field name="signatureFile" type="imagelist" hide_none="true" directory="components/com_thm_organizer/images"
               label="THM_ORGANIZER_SIGNATURE_FILE" description="THM_ORGANIZER_SIGNATURE_FILE_DESC" size="60"
               default="unterschrift-willems.png"/>
        <field name="address" type="text" label="THM_ORGANIZER_ADDRESS" description="THM_ORGANIZER_CONTACT_ADDRESS_DESC"
               size="100" default="Technische Hochschule Mittelhessen – Wiesenstraße 14 – 35390 Gießen"/>
        <field name="contact" type="text" label="THM_ORGANIZER_CONTACT" description="THM_ORGANIZER_CONTACT_DESC"
               size="100" default="Tel.: 0641/309 0 – Fax: 0641/309 2901 – www.thm.de"/>
        <field name="mailSender" type="user" label="THM_ORGANIZER_SENDER" description="THM_ORGANIZER_SENDER_DESC"
               default=""/>
        <field name="deadline" type="integer" first="1" last="30" label="THM_ORGANIZER_DEADLINE"
               description="THM_ORGANIZER_DEADLINE_DESC" default="5"/>
        <field name="fee" type="integer" first="0" last="500" step="5" label="THM_ORGANIZER_COURSE_FEE"
               description="THM_ORGANIZER_COURSE_FEE_DESC" default="50"/>
    </fieldset>
    <fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
        <field name="rules" type="rules" label="JCONFIG_PERMISSIONS_LABEL" validate="rules" filter="rules"
               component="com_thm_organizer" section="component"/>
    </fieldset>
</config>
