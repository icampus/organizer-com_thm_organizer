<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fields name="filter">
        <field name="search" type="text" label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="gridID" type="genericlist" valuecolumn="id" textcolumn="name" localized="true"
               table="thm_organizer_grids" label="COM_THM_ORGANIZER_GRID" onchange="this.form.submit();"
               description="COM_THM_ORGANIZER_GRID_EXPORT_DESC" required="true">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="city" type="genericlist" valuecolumn="city" textcolumn="city" table="thm_organizer_campuses"
               label="COM_THM_ORGANIZER_NAME" onchange="this.form.submit();" default=""
               placeholder="COM_THM_ORGANIZER_FILTER_CITY">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               onchange="this.form.submit();"/>
    </fields>
</form>
