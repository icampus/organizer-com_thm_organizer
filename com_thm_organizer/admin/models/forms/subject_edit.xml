<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fieldset name="details" label="THM_ORGANIZER_ATTRIBUTES_SUBJECT_DETAILS">
        <field name="id" type="hidden"/>
        <field name="campusID" type="campusID" label="THM_ORGANIZER_CAMPUS">
            <option value="">JNONE</option>
        </field>
        <field name="departmentID" type="departmentID" action="manage" label="THM_ORGANIZER_DEPARTMENT"
               description="THM_ORGANIZER_DEPARTMENT_DESC" required="true"/>
        <field name="lsfID" type="text" class="inputbox" size="70" label="THM_ORGANIZER_LSF_ID"
               description="THM_ORGANIZER_LSF_ID_DESC"/>
        <field name="externalID" type="text" class="inputbox" size="70" label="THM_ORGANIZER_MODULE_ID"
               description="THM_ORGANIZER_MODULE_ID_DESC"/>
        <field name="duration" type="integer" class="inputbox" label="THM_ORGANIZER_DURATION"
               description="THM_ORGANIZER_DURATION_DESC" first="1" last="30" step="1" default="1">
            <option value="0">THM_ORGANIZER_FILTER_CREDIT_POINTS</option>
        </field>
        <field name="instructionLanguage" type="list" label="THM_ORGANIZER_INSTRUCTION_LANGUAGE"
               description="THM_ORGANIZER_INSTRUCTION_LANGUAGE_DESC" default="D">
            <option value="D">THM_ORGANIZER_GERMAN</option>
            <option value="E">THM_ORGANIZER_ENGLISH</option>
        </field>
        <field name="is_prep_course" type="list" class="chzn-color-state" label="THM_ORGANIZER_PREP_COURSES"
               description="THM_ORGANIZER_PREP_COURSE_DESC" default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="max_participants" type="integer" default="300" label="THM_ORGANIZER_MAX_PARTICIPANTS"
               description="THM_ORGANIZER_MAX_PARTICIPANTS_DESC" first="20" last="1000" step="20"/>
        <field name="frequencyID" type="list" label="THM_ORGANIZER_AVAILABILITY"
               description="THM_ORGANIZER_AVAILABILITY_DESC">
            <option value="">THM_ORGANIZER_FILTER_AVAILABILITY</option>
            <option value="3">THM_ORGANIZER_AVAILABILITY_SEMESTER</option>
            <option value="5">THM_ORGANIZER_AVAILABILITY_YEAR</option>
            <option value="1">THM_ORGANIZER_AVAILABILITY_SUMMER</option>
            <option value="2">THM_ORGANIZER_AVAILABILITY_WINTER</option>
            <option value="4">THM_ORGANIZER_AVAILABILITY_AS_NEEDED</option>
            <option value="0">THM_ORGANIZER_AVAILABILITY_APPT</option>
        </field>
        <field name="fieldID" type="genericlist" valuecolumn="id" textcolumn="field" localized="true"
               table="thm_organizer_fields" class="inputbox" label="THM_ORGANIZER_FIELD"
               description="THM_ORGANIZER_FIELD_DESC">
            <option value="">THM_ORGANIZER_FILTER_FIELD</option>
            <option value="">JNONE</option>
        </field>
        <field name="planSubjectIDs" type="subjectmapping" responsibility="1" label="THM_ORGANIZER_PLAN_SUBJECT"/>
        <field type="spacer" name="spacer1" hr="true"/>
        <field name="creditpoints" type="integer" class="inputbox" label="THM_ORGANIZER_CREDIT_POINTS"
               description="THM_ORGANIZER_CREDIT_POINTS_DESC" first="1" last="30" step="1" default="0">
            <option value="0">THM_ORGANIZER_FILTER_CREDIT_POINTS</option>
        </field>
        <field name="sws" type="integer" class="inputbox" label="THM_ORGANIZER_SWS"
               description="THM_ORGANIZER_SWS_DESC" first="1" last="30" step="1" default="0">
            <option value="0">THM_ORGANIZER_FILTER_SEMESTER_HOURS</option>
        </field>
        <field name="expenditure" type="integer" class="inputbox" label="THM_ORGANIZER_EXPENDITURE"
               description="THM_ORGANIZER_EXPENDITURE_DESC" first="30" last="900" step="30" default="0">
            <option value="0">THM_ORGANIZER_FILTER_EXPENDITURE</option>
        </field>
        <field name="present" type="integer" class="inputbox" label="THM_ORGANIZER_PRESENT"
               description="THM_ORGANIZER_PRESENT_DESC" first="0" last="900" step="30" default="">
            <option value="">THM_ORGANIZER_FILTER_PRESENT</option>
        </field>
        <field name="independent" type="integer" class="inputbox" label="THM_ORGANIZER_INDEPENDENT"
               description="THM_ORGANIZER_INDEPENDENT_DESC" first="0" last="900" step="30" default="">
            <option value="">THM_ORGANIZER_FILTER_INDEPENDENT</option>
        </field>
        <field name="frequencyID" type="list" label="THM_ORGANIZER_AVAILABILITY"
               description="THM_ORGANIZER_AVAILABILITY_DESC">
            <option value="">THM_ORGANIZER_FILTER_AVAILABILITY</option>
            <option value="3">THM_ORGANIZER_AVAILABILITY_SEMESTER</option>
            <option value="5">THM_ORGANIZER_AVAILABILITY_YEAR</option>
            <option value="1">THM_ORGANIZER_AVAILABILITY_SUMMER</option>
            <option value="2">THM_ORGANIZER_AVAILABILITY_WINTER</option>
            <option value="4">THM_ORGANIZER_AVAILABILITY_AS_NEEDED</option>
            <option value="0">THM_ORGANIZER_AVAILABILITY_APPT</option>
        </field>
        <field name="spacer2" type="spacer" hr="true"/>
        <field name="literature" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_LITERATURE"
               description="THM_ORGANIZER_LITERATURE_DESC"/>
    </fieldset>
    <fieldset name="de_texts" label="THM_ORGANIZER_ATTRIBUTES_DE">
        <field name="name_de" type="text" class="inputbox" size="70" label="THM_ORGANIZER_NAME_DE"
               description="THM_ORGANIZER_NAME_DE_DESC" hint="Grundlagen der Informatik"/>
        <field name="short_name_de" type="text" class="inputbox" size="70" label="THM_ORGANIZER_SHORT_NAME_DE"
               description="THM_ORGANIZER_SHORT_NAME_DE_DESC" hint="Grundl. d. Inf."/>
        <field name="abbreviation_de" type="text" class="inputbox" size="70" label="THM_ORGANIZER_ABBREVIATION_DE"
               description="THM_ORGANIZER_ABBREVIATION_DE_DESC" hint="GDI"/>
        <field name="method_de" type="text" class="inputbox" size="70" label="THM_ORGANIZER_METHOD_DE"
               description="THM_ORGANIZER_METHOD_DE_DESC" hint="2 SWS Vorlesung, 2 SWS Übung"/>
        <field name="preliminary_work_de" type="text" class="inputbox" size="6"
               label="THM_ORGANIZER_PRELIMINARY_WORK_DE" description="THM_ORGANIZER_PRELIMINARY_WORK_DE_DESC"
               hint="Erfolgreicher Abgabe von 6 Hausübungen."/>
        <field name="proof_de" type="text" class="inputbox" size="70" label="THM_ORGANIZER_PROOF_DE"
               description="THM_ORGANIZER_PROOF_DE_DESC" hint="schriftliche Klausur"/>
        <field name="evaluation_de" type="text" class="inputbox" size="20" label="THM_ORGANIZER_EVALUATION_DE"
               description="THM_ORGANIZER_EVALUATION_DE_DESC"
               hint="gem. § 9 der Allg. Bestimmungen (Teil I der PO)"/>
        <field name="description_de" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_DESC_DE"
               description="THM_ORGANIZER_DESC_DE_DESC"/>
        <field name="objective_de" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_OBJECTIVE_DE"
               description="THM_ORGANIZER_OBJECTIVE_DE_DESC"/>
        <field name="content_de" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_CONTENT_DE"
               description="THM_ORGANIZER_CONTENT_DE_DESC"/>
        <field name="prerequisites_de" type="editor" class="inputbox" size="6"
               label="THM_ORGANIZER_PREREQUISITES_DE" description="THM_ORGANIZER_PREREQUISITES_DE_DESC"/>
        <field name="recommended_prerequisites_de" type="editor" class="inputbox" size="6"
               label="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_DE"
               description="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_DE_DESC"/>
        <field name="used_for_de" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_USED_FOR"
               description="THM_ORGANIZER_USED_FOR_DE_DESC"/>
        <field name="aids_de" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_AIDS_DE"
               description="THM_ORGANIZER_AIDS_DE_DESC"/>
    </fieldset>
    <fieldset name="en_texts" label="THM_ORGANIZER_ATTRIBUTES_EN">
        <field name="name_en" type="text" class="inputbox" size="70" label="THM_ORGANIZER_NAME_EN"
               description="THM_ORGANIZER_NAME_EN_DESC" hint="Fundamentals of Computer Science"/>
        <field name="short_name_en" type="text" class="inputbox" size="70" label="THM_ORGANIZER_SHORT_NAME_EN"
               description="THM_ORGANIZER_SHORT_NAME_EN_DESC" hint="Fund. Comp. Sci."/>
        <field name="abbreviation_en" type="text" class="inputbox" size="70" label="THM_ORGANIZER_ABBREVIATION_EN"
               description="THM_ORGANIZER_ABBREVIATION_DE_DESC" hint="FCS"/>
        <field name="method_en" type="text" class="inputbox" size="70" label="THM_ORGANIZER_METHOD_EN"
               description="THM_ORGANIZER_METHOD_EN_DESC" hint="2 SWS Lecture, 2 SWS Practice"/>
        <field name="preliminary_work_en" type="text" class="inputbox" size="6"
               label="THM_ORGANIZER_PRELIMINARY_WORK_EN" description="THM_ORGANIZER_PRELIMINARY_WORK_EN_DESC"
               hint="Successful completion of six homework assignments."/>
        <field name="proof_en" type="text" class="inputbox" size="70" label="THM_ORGANIZER_PROOF_EN"
               description="THM_ORGANIZER_PROOF_EN_DESC" hint="Written Exam"/>
        <field name="evaluation_en" type="text" class="inputbox" size="6" label="THM_ORGANIZER_EVALUATION_EN"
               description="THM_ORGANIZER_EVALUATION_EN_DESC"
               hint="acc. § 9 of the gen. provisions (Part I of the PO)"/>
        <field name="description_en" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_DESC_EN"
               description="THM_ORGANIZER_DESC_EN_DESC"/>
        <field name="objective_en" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_OBJECTIVE_EN"
               description="THM_ORGANIZER_OBJECTIVE_EN_DESC"/>
        <field name="content_en" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_CONTENT_EN"
               description="THM_ORGANIZER_CONTENT_EN_DESC"/>
        <field name="prerequisites_en" type="editor" class="inputbox" size="6"
               label="THM_ORGANIZER_PREREQUISITES_EN" description="THM_ORGANIZER_PREREQUISITES_EN_DESC"/>
        <field name="recommended_prerequisites_en" type="editor" class="inputbox" size="6"
               label="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_EN"
               description="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_EN_DESC"/>
        <field name="used_for_en" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_USED_FOR"
               description="THM_ORGANIZER_USED_FOR_EN_DESC"/>
        <field name="aids_en" type="editor" class="inputbox" size="6" label="THM_ORGANIZER_AIDS_EN"
               description="THM_ORGANIZER_AIDS_EN_DESC"/>
    </fieldset>
    <fieldset name="advanced" label="THM_ORGANIZER_ATTRIBUTES_SUBJECT_ADVANCED">
        <field name="responsible" type="subjectTeacher" responsibility="1" label="THM_ORGANIZER_MODULE_COORDINATORS"
               description="THM_ORGANIZER_MODULE_COORDINATORS_DESC"/>
        <field name="teacherID" type="subjectTeacher" responsibility="2" label="THM_ORGANIZER_TEACHERS"
               description="THM_ORGANIZER_TEACHERS_DESC"/>
        <field name="spacer4" type="spacer" hr="true"/>
        <field name="expertise" type="list" class="inputbox" label="THM_ORGANIZER_EXPERTISE"
               description="THM_ORGANIZER_EXPERTISE_DESC" default="">
            <option value=''>THM_ORGANIZER_NO_STARS</option>
            <option value='0'>THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>THM_ORGANIZER_THREE_STARS</option>
        </field>
        <field name="method_competence" type="list" class="inputbox" label="THM_ORGANIZER_METHOD_COMPETENCE"
               description="THM_ORGANIZER_METHOD_COMPETENCE_DESC" default="">
            <option value=''>THM_ORGANIZER_NO_STARS</option>
            <option value='0'>THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>THM_ORGANIZER_THREE_STARS</option>
        </field>
        <field name="self_competence" type="list" class="inputbox" label="THM_ORGANIZER_SELF_COMPETENCE"
               description="THM_ORGANIZER_SELF_COMPETENCE_DESC" default="">
            <option value=''>THM_ORGANIZER_NO_STARS</option>
            <option value='0'>THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>THM_ORGANIZER_THREE_STARS</option>
        </field>
        <field name="social_competence" type="list" class="inputbox" label="THM_ORGANIZER_SOCIAL_COMPETENCE"
               description="THM_ORGANIZER_SOCIAL_COMPETENCE_DESC" default="">
            <option value=''>THM_ORGANIZER_NO_STARS</option>
            <option value='0'>THM_ORGANIZER_ZERO_STARS</option>
            <option value='1'>THM_ORGANIZER_ONE_STAR</option>
            <option value='2'>THM_ORGANIZER_TWO_STARS</option>
            <option value='3'>THM_ORGANIZER_THREE_STARS</option>
        </field>
    </fieldset>
    <fieldset name="mappings" label="THM_ORGANIZER_ATTRIBUTES_MAPPINGS" displayinitial="0">
        <field name="programID" type="programs" class="inputbox" label="THM_ORGANIZER_PROGRAMS"
               description="THM_ORGANIZER_PROGRAMS_DESC"/>
        <field name="parentID" type="parentpool" class="inputbox" label="THM_ORGANIZER_PARENT_POOLS"
               description="THM_ORGANIZER_PARENT_POOLS_DESC"/>
    </fieldset>
</form>
