<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/media/com_thm_organizer/fields">
        <field name="id" type="hidden"/>
        <field name="name" type="text" class="inputbox required" size="60" maxlength="60" label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_NAME_DESC" required="true"/>
        <field name="campusID" type="Campuses" label="COM_THM_ORGANIZER_CAMPUS">
            <option value="">JNONE</option>
        </field>
        <field name="location" type="text" class="inputbox validate-gps" size="60" maxlength="20"
               label="COM_THM_ORGANIZER_LOCATION" description="COM_THM_ORGANIZER_LOCATION_DESC"/>
        <field name="address" type="text" class="inputbox validate-german-address" size="60" maxlength="255"
               label="COM_THM_ORGANIZER_ADDRESS" description="COM_THM_ORGANIZER_ADDRESS_DESC"/>
        <field name="propertyType" type="list" label="COM_THM_ORGANIZER_PROPERTY_TYPE"
               description="COM_THM_ORGANIZER_PROPERTY_TYPE_DESC">
            <option value="0">COM_THM_ORGANIZER_UNKNOWN</option>
            <option value="1">COM_THM_ORGANIZER_OWNED</option>
            <option value="2">COM_THM_ORGANIZER_RENTED</option>
            <option value="3">COM_THM_ORGANIZER_USED</option>
        </field>
    </fieldset>
</form>
