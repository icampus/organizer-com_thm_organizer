<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/media/com_thm_organizer/fields">
    <fields name="filter">
        <field name="search" type="text" label="COM_THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
    </fields>
    <fields name="list">
        <field name="departmentID" type="departmentID" action="schedule" label="COM_THM_ORGANIZER_DEPARTMENT"
               description="COM_THM_ORGANIZER_DEPARTMENT_DESC" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="programID" type="planProgramID" valuecolumn="id" textcolumn="name" departmentRestrict="force"
               access="true" table="thm_organizer_plan_programs" label="COM_THM_ORGANIZER_PROGRAM"
               onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
    <fields name="batch">
        <field name="publishing" type="planningPeriodPublishing" label="COM_THM_ORGANIZER_PUBLISHING"
               description="COM_THM_ORGANIZER_PERIOD_PUBLISHING_DESC" required="true"/>
    </fields>
</form>
