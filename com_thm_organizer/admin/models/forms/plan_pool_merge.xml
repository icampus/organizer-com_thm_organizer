<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fieldset name="details">
        <field name="full_name" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_NAME"
               description="THM_ORGANIZER_NAME_DESC" required="true"/>
        <field name="name" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_SHORT_NAME"
               description="THM_ORGANIZER_SHORT_NAME_DESC" required="true"/>
        <field name="gpuntisID" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_GPUNTISID"
               description="THM_ORGANIZER_GPUNTISID_DESC" required="true"/>
        <field name="programID" type="planProgramID" class="inputbox" label="THM_ORGANIZER_PROGRAM"
               description="THM_ORGANIZER_PROGRAM_DESC"/>
        <field name="publishing" type="planningPeriodPublishing" label="THM_ORGANIZER_PUBLISHING"
               description="THM_ORGANIZER_PERIOD_PUBLISHING_DESC" required="true"/>
        <field name="gridID" type="mergeByID" textcolumn="name" localized="true"
               tables="thm_organizer_plan_pools AS pp,thm_organizer_grids AS g ON g.id = pp.gridID" class="inputbox"
               label="THM_ORGANIZER_GRID" description="THM_ORGANIZER_GRID_DESC">
            <option value="">JNONE</option>
        </field>
        <field name="id" type="mergeID" other="false"/>
        <field name="otherIDs" type="mergeID" other="true"/>
    </fieldset>
</form>
