<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/media/com_thm_organizer/fields">
        <field name="full_name" type="MergeByValue" class="inputbox" label="COM_THM_ORGANIZER_NAME"
               description="COM_THM_ORGANIZER_NAME_DESC" required="true"/>
        <field name="name" type="MergeByValue" class="inputbox" label="COM_THM_ORGANIZER_SHORT_NAME"
               description="COM_THM_ORGANIZER_SHORT_NAME_DESC" required="true"/>
        <field name="gpuntisID" type="MergeByValue" class="inputbox" label="COM_THM_ORGANIZER_GPUNTISID"
               description="COM_THM_ORGANIZER_GPUNTISID_DESC" required="true"/>
        <field name="programID" type="PlanPrograms" class="inputbox" label="COM_THM_ORGANIZER_PROGRAM"
               description="COM_THM_ORGANIZER_PROGRAM_DESC"/>
        <field name="publishing" type="PlanningPeriodPublishing" label="COM_THM_ORGANIZER_PUBLISHING"
               description="COM_THM_ORGANIZER_PERIOD_PUBLISHING_DESC" required="true"/>
        <field name="gridID" type="MergeByID" textcolumn="name" localized="true"
               tables="thm_organizer_plan_pools AS pp,thm_organizer_grids AS g ON g.id = pp.gridID" class="inputbox"
               label="COM_THM_ORGANIZER_GRID" description="COM_THM_ORGANIZER_GRID_DESC">
            <option value="">JNONE</option>
        </field>
        <field name="id" type="mergeID" other="false"/>
        <field name="otherIDs" type="mergeID" other="true"/>
    </fieldset>
</form>
