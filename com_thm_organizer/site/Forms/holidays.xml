<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="type" type="Options" label="THM_ORGANIZER_HOLIDAY_TYPE" onchange="this.form.submit();">
            <option value="">ALL_TYPES</option>
            <option value="1">PLANNING_OPTIONAL</option>
            <option value="2">PLANNING_MANUAL</option>
            <option value="3">PLANNING_BLOCKED</option>
        </field>
        <field name="status" type="Options" label="THM_ORGANIZER_STATE" onchange="this.form.submit();">
            <option value="">ALL_STATES</option>
            <option value="1">EXPIRED_HOLIDAYS</option>
            <option value="2">PENDING_HOLIDAYS</option>
            <option value="3">CURRENT_HOLIDAYS</option>
        </field>
        <field name="year" type="GenericOptions" label="THM_ORGANIZER_YEAR" onchange="this.form.submit();"
               valuecolumn="year(startDate)" textcolumn="year(startDate)" table="thm_organizer_holidays">
            <option value="">ALL</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>