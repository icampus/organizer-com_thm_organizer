<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="departmentID" type="Departments" label="DEPARTMENT" auth="1" onchange="this.form.submit();">
            <option value="">ALL_DEPARTMENTS</option>
            <option value="-1">NO_DEPARTMENTS</option>
        </field>
        <field name="programID" type="Programs" label="PROGRAM" auth="1" onchange="this.form.submit();">
            <option value="">ALL_PROGRAMS</option>
            <option value="-1">NO_PROGRAMS</option>
        </field>
        <field name="fieldID" type="GenericList" valuecolumn="f.id" textcolumn="f.field" localized="true"
               table="thm_organizer_pools AS p,thm_organizer_fields AS f ON p.fieldID = f.id" label="FIELD"
               onchange="this.form.submit();">
            <option value="">ALL_FIELDS</option>
            <option value="-1">NO_FIELDS</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>
