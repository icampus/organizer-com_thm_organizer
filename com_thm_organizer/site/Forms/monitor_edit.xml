<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fieldset name="details">
        <field id="id" name="id" type="hidden"/>
        <field name="roomID" type="genericlist" valuecolumn="id" textcolumn="name" table="thm_organizer_rooms"
               label="THM_ORGANIZER_ROOM" description="THM_ORGANIZER_ROOM_DESC" class='inputbox required'
               required="true">
            <option value="">THM_ORGANIZER_ALL_ROOMS</option>
        </field>
        <field id="ip" name="ip" type="text" label="THM_ORGANIZER_IP" description="THM_ORGANIZER_IP_DESC"
               class="inputbox required validate-ip" required="true" maxlength="15" default=""/>
        <field type="list" name="useDefaults" label="THM_ORGANIZER_DEFAULT_SETTINGS"
               description="THM_ORGANIZER_DEFAULT_SETTINGS_DESC" class="inputbox" default="1">
            <option value='1'>JYES</option>
            <option value='0'>JNO</option>
        </field>
        <field type="list" id="display" name="display" label="THM_ORGANIZER_DISPLAY_BEHAVIOUR"
               description="THM_ORGANIZER_DISPLAY_BEHAVIOUR_DESC" class="inputbox" required="true">
            <option value='1'>THM_ORGANIZER_DAILY_PLAN</option>
            <option value='2'>THM_ORGANIZER_MIXED_PLAN</option>
            <option value='3'>THM_ORGANIZER_CONTENT_DISPLAY</option>
        </field>
        <field id="schedule_refresh" name="schedule_refresh" type="integer" label="THM_ORGANIZER_SCHEDULE_REFRESH_RATE"
               description="THM_ORGANIZER_SCHEDULE_REFRESH_RATE_DESC" first="10" last="990" step="10" default="60"/>
        <field id="content_refresh" name="content_refresh" type="integer" label="THM_ORGANIZER_CONTENT_REFRESH"
               description="THM_ORGANIZER_CONTENT_REFRESH_DESC" first="10" last="990" step="10" default="60"/>
        <field id="content" name="content" type="filelist" label="THM_ORGANIZER_DISPLAY_CONTENT"
               description="THM_ORGANIZER_DISPLAY_CONTENT_DESC" directory="images/thm_organizer/" exclude=""/>
    </fieldset>
</form>
