<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="name_de" type="text" class="required" size="60" maxlength="60" required="true"
               label="THM_ORGANIZER_NAME_DE" description="THM_ORGANIZER_NAME_DE_DESC"/>
        <field name="name_en" type="text" class="required validate-alpha" size="60" maxlength="60" required="true"
               label="THM_ORGANIZER_NAME_EN" description="THM_ORGANIZER_NAME_EN_DESC"/>
        <field name="parentID" type="Campuses" label="PARENT_CAMPUS">
            <option value="">NO_PARENT_CAMPUS</option>
        </field>
        <field name="isCity" type="list" class="chzn-color-state" label="IS_CITY"
               description="THM_ORGANIZER_IS_CITY_DESC" default="0">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </field>
        <field name="location" type="text" class="validate-gps" size="60" maxlength="20" label="THM_ORGANIZER_LOCATION"
               description="THM_ORGANIZER_LOCATION_DESC"/>
        <field name="address" type="text" class="validate-german-address" size="60" maxlength="255"
               label="THM_ORGANIZER_ADDRESS" description="THM_ORGANIZER_ADDRESS_DESC"/>
        <field name="city" type="text" class="validate-alpha-german" size="60" maxlength="60" label="THM_ORGANIZER_CITY"
               description="THM_ORGANIZER_CITY_DESC"/>
        <field name="zipCode" type="text" class="validate-alphanumeric" size="60" maxlength="60"
               label="THM_ORGANIZER_ZIP_CODE" description="THM_ORGANIZER_ZIP_CODE_DESC"/>
        <field name="gridID" type="GenericList" valuecolumn="id" textcolumn="name" localized="true"
               table="thm_organizer_grids" label="GRID">
            <option value="">DEFAULT_GRID</option>
        </field>
    </fieldset>
</form>
