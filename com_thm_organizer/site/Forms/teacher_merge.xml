<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fieldset name="details">
        <field name="untisID" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_UNTISID"
               description="THM_ORGANIZER_UNTISID_DESC" required="true"/>
        <field name="surname" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_SURNAME"
               description="THM_ORGANIZER_SURNAME_DESC" required="true"/>
        <field name="forename" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_FORENAME"
               description="THM_ORGANIZER_FORENAME_DESC">
            <option value="">JNONE</option>
        </field>
        <field name="title" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_TITLE"
               description="THM_ORGANIZER_TITLE_DESC">
            <option value="">JNONE</option>
        </field>
        <field name="username" type="mergeByValue" class="inputbox" label="THM_ORGANIZER_USERNAME"
               description="THM_ORGANIZER_USERNAME_DESC">
            <option value="">JNONE</option>
        </field>
        <field name="fieldID" type="mergeByID" textcolumn="field" localized="true"
               tables="thm_organizer_teachers AS t,thm_organizer_fields AS f ON t.fieldID = f.id" class="inputbox"
               label="THM_ORGANIZER_FIELD" description="THM_ORGANIZER_FIELD_DESC">
            <option value="">JNONE</option>
        </field>
        <field name="departmentID" type="departmentID" class="inputbox" multiple="multiple" required="true"
               label="THM_ORGANIZER_DEPARTMENTS" description="THM_ORGANIZER_DEPARTMENTS_ASSOC_DESC"
               resource="teacher"/>
        <field name="id" type="mergeID" other="false"/>
        <field name="otherIDs" type="mergeID" other="true"/>
    </fieldset>
</form>
