<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details" label="ATTRIBUTES_SUBJECT_DETAILS">
        <field name="id" type="hidden"/>
        <field name="campusID" type="Campuses" label="CAMPUS">
            <option value="">NO_CAMPUS</option>
        </field>
        <field name="departmentID" type="Departments" label="DEPARTMENT" access="document" required="true"/>
        <field name="lsfID" type="text" size="70" label="THM_ORGANIZER_LSF_ID" description="THM_ORGANIZER_LSF_ID_DESC"/>
        <field name="externalID" type="text" size="70" label="THM_ORGANIZER_MODULE_ID"
               description="THM_ORGANIZER_MODULE_ID_DESC"/>
        <field name="duration" type="Integer" label="DURATION" first="1" last="30" step="1" default="1">
            <option value="0">SELECT_DURATION</option>
        </field>
        <field name="instructionLanguage" type="List" label="INSTRUCTION_LANGUAGE" default="D">
            <option value="D">GERMAN</option>
            <option value="E">ENGLISH</option>
        </field>
        <field name="is_prep_course" type="List" class="chzn-color-state" label="PREP_COURSES" default="0">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </field>
        <field name="max_participants" type="Integer" label="MAX_PARTICIPANTS" default="300" first="20" last="1000"
               step="20"/>
        <field name="frequencyID" type="List" label="AVAILABILITY">
            <option value="">FILTER_AVAILABILITY</option>
            <option value="3">AVAILABILITY_SEMESTER</option>
            <option value="5">AVAILABILITY_YEAR</option>
            <option value="1">AVAILABILITY_SUMMER</option>
            <option value="2">AVAILABILITY_WINTER</option>
            <option value="4">AVAILABILITY_AS_NEEDED</option>
            <option value="0">AVAILABILITY_APPT</option>
        </field>
        <field name="fieldID" type="GenericList" label="FIELD" valuecolumn="id" textcolumn="field" localized="true"
               table="thm_organizer_fields">
            <option value="">NO_FIELD</option>
        </field>
        <field name="planSubjectIDs" type="SubjectCourses" responsibility="1" label="EVENT"/>
        <field name="spacer1" type="spacer" hr="true"/>
        <field name="creditpoints" type="Integer" label="CREDIT_POINTS" first="1" last="30" step="1" default="0">
            <option value="0">SELECT_CREDIT_POINTS</option>
        </field>
        <field name="sws" type="Integer" label="SWS" first="1" last="30" step="1" default="0">
            <option value="0">FILTER_SEMESTER_HOURS</option>
        </field>
        <field name="expenditure" type="Integer" label="EXPENDITURE" first="30" last="900" step="30" default="0">
            <option value="0">NO_INPUT</option>
        </field>
        <field name="present" type="Integer" label="PRESENT" first="0" last="900" step="30" default="">
            <option value="">NO_INPUT</option>
        </field>
        <field name="independent" type="Integer" label="INDEPENDENT" first="0" last="900" step="30" default="">
            <option value="">NO_INPUT</option>
        </field>
        <field name="frequencyID" type="List" label="AVAILABILITY">
            <option value="">FILTER_AVAILABILITY</option>
            <option value="3">AVAILABILITY_SEMESTER</option>
            <option value="5">AVAILABILITY_YEAR</option>
            <option value="1">AVAILABILITY_SUMMER</option>
            <option value="2">AVAILABILITY_WINTER</option>
            <option value="4">AVAILABILITY_AS_NEEDED</option>
            <option value="0">AVAILABILITY_APPT</option>
        </field>
        <field name="spacer2" type="spacer" hr="true"/>
        <field name="literature" type="editor" label="THM_ORGANIZER_LITERATURE" size="6"
               description="THM_ORGANIZER_LITERATURE_DESC"/>
    </fieldset>
    <fieldset name="de_texts" label="ATTRIBUTES_DE">
        <field name="name_de" type="text" label="THM_ORGANIZER_NAME_DE" size="70" hint="Grundlagen der Informatik"
               description="THM_ORGANIZER_NAME_DE_DESC"/>
        <field name="short_name_de" type="text" label="THM_ORGANIZER_SHORT_NAME_DE" size="70" hint="Grundl. d. Inf."
               description="THM_ORGANIZER_SHORT_NAME_DE_DESC"/>
        <field name="abbreviation_de" type="text" label="THM_ORGANIZER_ABBREVIATION_DE" size="70" hint="GDI"
               description="THM_ORGANIZER_ABBREVIATION_DE_DESC"/>
        <field name="method_de" type="text" size="70" label="THM_ORGANIZER_METHOD_DE"
               description="THM_ORGANIZER_METHOD_DE_DESC" hint="2 SWS Vorlesung, 2 SWS Übung"/>
        <field name="preliminary_work_de" type="text" size="6" label="THM_ORGANIZER_PRELIMINARY_WORK_DE"
               description="THM_ORGANIZER_PRELIMINARY_WORK_DE_DESC" hint="Erfolgreicher Abgabe von 6 Hausübungen."/>
        <field name="proof_de" type="text" size="70" label="THM_ORGANIZER_PROOF_DE"
               description="THM_ORGANIZER_PROOF_DE_DESC" hint="schriftliche Klausur"/>
        <field name="evaluation_de" type="text" size="20" label="THM_ORGANIZER_EVALUATION_DE"
               description="THM_ORGANIZER_EVALUATION_DE_DESC" hint="gem. § 9 der Allg. Bestimmungen (Teil I der PO)"/>
        <field name="description_de" type="editor" size="6" label="THM_ORGANIZER_DESC_DE"
               description="THM_ORGANIZER_DESC_DE_DESC"/>
        <field name="objective_de" type="editor" size="6" label="THM_ORGANIZER_OBJECTIVE_DE"
               description="THM_ORGANIZER_OBJECTIVE_DE_DESC"/>
        <field name="content_de" type="editor" size="6" label="THM_ORGANIZER_CONTENT_DE"
               description="THM_ORGANIZER_CONTENT_DE_DESC"/>
        <field name="prerequisites_de" type="editor" size="6" label="THM_ORGANIZER_PREREQUISITES_DE"
               description="THM_ORGANIZER_PREREQUISITES_DE_DESC"/>
        <field name="recommended_prerequisites_de" type="editor" size="6"
               label="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_DE"
               description="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_DE_DESC"/>
        <field name="used_for_de" type="editor" size="6" label="THM_ORGANIZER_USED_FOR"
               description="THM_ORGANIZER_USED_FOR_DE_DESC"/>
        <field name="aids_de" type="editor" size="6" label="THM_ORGANIZER_AIDS_DE"
               description="THM_ORGANIZER_AIDS_DE_DESC"/>
    </fieldset>
    <fieldset name="en_texts" label="ATTRIBUTES_EN">
        <field name="name_en" type="text" size="70" label="THM_ORGANIZER_NAME_EN"
               description="THM_ORGANIZER_NAME_EN_DESC" hint="Fundamentals of Computer Science"/>
        <field name="short_name_en" type="text" size="70" label="THM_ORGANIZER_SHORT_NAME_EN"
               description="THM_ORGANIZER_SHORT_NAME_EN_DESC" hint="Fund. Comp. Sci."/>
        <field name="abbreviation_en" type="text" size="70" label="THM_ORGANIZER_ABBREVIATION_EN"
               description="THM_ORGANIZER_ABBREVIATION_DE_DESC" hint="FCS"/>
        <field name="method_en" type="text" size="70" label="THM_ORGANIZER_METHOD_EN"
               description="THM_ORGANIZER_METHOD_EN_DESC" hint="2 SWS Lecture, 2 SWS Practice"/>
        <field name="preliminary_work_en" type="text" size="6" label="THM_ORGANIZER_PRELIMINARY_WORK_EN"
               description="THM_ORGANIZER_PRELIMINARY_WORK_EN_DESC"
               hint="Successful completion of six homework assignments."/>
        <field name="proof_en" type="text" size="70" label="THM_ORGANIZER_PROOF_EN"
               description="THM_ORGANIZER_PROOF_EN_DESC" hint="Written Exam"/>
        <field name="evaluation_en" type="text" size="6" label="THM_ORGANIZER_EVALUATION_EN"
               description="THM_ORGANIZER_EVALUATION_EN_DESC"
               hint="acc. § 9 of the gen. provisions (Part I of the PO)"/>
        <field name="description_en" type="editor" size="6" label="THM_ORGANIZER_DESC_EN"
               description="THM_ORGANIZER_DESC_EN_DESC"/>
        <field name="objective_en" type="editor" size="6" label="THM_ORGANIZER_OBJECTIVE_EN"
               description="THM_ORGANIZER_OBJECTIVE_EN_DESC"/>
        <field name="content_en" type="editor" size="6" label="THM_ORGANIZER_CONTENT_EN"
               description="THM_ORGANIZER_CONTENT_EN_DESC"/>
        <field name="prerequisites_en" type="editor" size="6" label="THM_ORGANIZER_PREREQUISITES_EN"
               description="THM_ORGANIZER_PREREQUISITES_EN_DESC"/>
        <field name="recommended_prerequisites_en" type="editor" size="6"
               label="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_EN"
               description="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_EN_DESC"/>
        <field name="used_for_en" type="editor" size="6" label="THM_ORGANIZER_USED_FOR"
               description="THM_ORGANIZER_USED_FOR_EN_DESC"/>
        <field name="aids_en" type="editor" size="6" label="THM_ORGANIZER_AIDS_EN"
               description="THM_ORGANIZER_AIDS_EN_DESC"/>
    </fieldset>
    <fieldset name="advanced" label="ATTRIBUTES_SUBJECT_ADVANCED">
        <field name="coordinators" type="SubjectTeachers" label="COORDINATORS" responsibility="1" multiple="multiple">
            <option value="">NO_INPUT</option>
        </field>
        <field name="teachers" type="SubjectTeachers" label="TEACHERS" responsibility="2" multiple="multiple">
            <option value="">UNSPECIFIED_TEACHERS</option>
        </field>
        <field name="spacer4" type="spacer" hr="true"/>
        <field name="expertise" type="List" label="EXPERTISE" description="THM_ORGANIZER_EXPERTISE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
        <field name="method_competence" type="List" label="METHOD_COMPETENCE"
               description="THM_ORGANIZER_METHOD_COMPETENCE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
        <field name="self_competence" type="List" label="SELF_COMPETENCE"
               description="THM_ORGANIZER_SELF_COMPETENCE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
        <field name="social_competence" type="List" label="SOCIAL_COMPETENCE"
               description="THM_ORGANIZER_SOCIAL_COMPETENCE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
    </fieldset>
    <fieldset name="mappings" label="ATTRIBUTES_MAPPINGS" displayinitial="0">
        <field name="programID" type="ProgramMappings" label="PROGRAMS"/>
        <field name="parentID" type="ParentPool" label="PARENT_POOLS"/>
    </fieldset>
</form>
