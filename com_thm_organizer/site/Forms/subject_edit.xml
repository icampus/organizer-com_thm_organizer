<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details" label="ATTRIBUTES_SUBJECT_DETAILS">
        <field name="id" type="hidden"/>
        <field name="campusID" type="Campuses" label="CAMPUS">
            <option value="">NO_CAMPUS</option>
        </field>
        <field name="departmentID" type="Departments" label="DEPARTMENT" auth="1" required="true"/>
        <field name="lsfID" type="text" size="70" label="THM_ORGANIZER_LSF_ID" description="THM_ORGANIZER_LSF_ID_DESC"/>
        <field name="externalID" type="text" size="70" label="THM_ORGANIZER_MODULE_ID"
               description="THM_ORGANIZER_MODULE_ID_DESC"/>
        <field name="duration" type="Integer" label="DURATION" description="THM_ORGANIZER_DURATION_DESC" first="1"
               last="30" step="1" default="1">
            <option value="0">FILTER_CREDIT_POINTS</option>
        </field>
        <field name="instructionLanguage" type="List" label="INSTRUCTION_LANGUAGE"
               description="THM_ORGANIZER_INSTRUCTION_LANGUAGE_DESC" default="D">
            <option value="D">GERMAN</option>
            <option value="E">ENGLISH</option>
        </field>
        <field name="is_prep_course" type="List" class="chzn-color-state" label="PREP_COURSES"
               description="THM_ORGANIZER_PREP_COURSE_DESC" default="0">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </field>
        <field name="max_participants" type="Integer" default="300" label="MAX_PARTICIPANTS"
               description="THM_ORGANIZER_MAX_PARTICIPANTS_DESC" first="20" last="1000" step="20"/>
        <field name="frequencyID" type="List" label="AVAILABILITY" description="THM_ORGANIZER_AVAILABILITY_DESC">
            <option value="">FILTER_AVAILABILITY</option>
            <option value="3">AVAILABILITY_SEMESTER</option>
            <option value="5">AVAILABILITY_YEAR</option>
            <option value="1">AVAILABILITY_SUMMER</option>
            <option value="2">AVAILABILITY_WINTER</option>
            <option value="4">AVAILABILITY_AS_NEEDED</option>
            <option value="0">AVAILABILITY_APPT</option>
        </field>
        <field name="fieldID" type="GenericList" valuecolumn="id" textcolumn="field" localized="true"
               table="thm_organizer_fields" label="FIELD" description="THM_ORGANIZER_FIELD_DESC">
            <option value="">NO_FIELDS</option>
        </field>
        <field name="planSubjectIDs" type="SubjectCourses" responsibility="1" label="EVENT"/>
        <field name="spacer1" type="spacer" hr="true"/>
        <field name="creditpoints" type="Integer" label="CREDIT_POINTS" description="THM_ORGANIZER_CREDIT_POINTS_DESC"
               first="1" last="30" step="1" default="0">
            <option value="0">FILTER_CREDIT_POINTS</option>
        </field>
        <field name="sws" type="Integer" label="SWS" description="THM_ORGANIZER_SWS_DESC" first="1" last="30" step="1"
               default="0">
            <option value="0">FILTER_SEMESTER_HOURS</option>
        </field>
        <field name="expenditure" type="Integer" label="EXPENDITURE" description="THM_ORGANIZER_EXPENDITURE_DESC"
               first="30" last="900" step="30" default="0">
            <option value="0">NO_INPUT</option>
        </field>
        <field name="present" type="Integer" label="PRESENT" description="THM_ORGANIZER_PRESENT_DESC" first="0"
               last="900" step="30" default="">
            <option value="">NO_INPUT</option>
        </field>
        <field name="independent" type="Integer" label="INDEPENDENT" description="THM_ORGANIZER_INDEPENDENT_DESC"
               first="0" last="900" step="30" default="">
            <option value="">NO_INPUT</option>
        </field>
        <field name="frequencyID" type="List" label="AVAILABILITY" description="THM_ORGANIZER_AVAILABILITY_DESC">
            <option value="">FILTER_AVAILABILITY</option>
            <option value="3">AVAILABILITY_SEMESTER</option>
            <option value="5">AVAILABILITY_YEAR</option>
            <option value="1">AVAILABILITY_SUMMER</option>
            <option value="2">AVAILABILITY_WINTER</option>
            <option value="4">AVAILABILITY_AS_NEEDED</option>
            <option value="0">AVAILABILITY_APPT</option>
        </field>
        <field name="spacer2" type="spacer" hr="true"/>
        <field name="literature" type="editor" size="6" label="LITERATURE" description="THM_ORGANIZER_LITERATURE_DESC"/>
    </fieldset>
    <fieldset name="de_texts" label="ATTRIBUTES_DE">
        <field name="name_de" type="text" size="70" label="THM_ORGANIZER_NAME_DE"
               description="THM_ORGANIZER_NAME_DE_DESC" hint="Grundlagen der Informatik"/>
        <field name="short_name_de" type="text" size="70" label="THM_ORGANIZER_SHORT_NAME_DE"
               description="THM_ORGANIZER_SHORT_NAME_DE_DESC" hint="Grundl. d. Inf."/>
        <field name="abbreviation_de" type="text" size="70" label="THM_ORGANIZER_ABBREVIATION_DE"
               description="THM_ORGANIZER_ABBREVIATION_DE_DESC" hint="GDI"/>
        <field name="method_de" type="text" size="70" label="THM_ORGANIZER_METHOD_DE"
               description="THM_ORGANIZER_METHOD_DE_DESC" hint="2 SWS Vorlesung, 2 SWS Übung"/>
        <field name="preliminary_work_de" type="text" size="6" label="THM_ORGANIZER_PRELIMINARY_WORK_DE"
               description="THM_ORGANIZER_PRELIMINARY_WORK_DE_DESC" hint="Erfolgreicher Abgabe von 6 Hausübungen."/>
        <field name="proof_de" type="text" size="70" label="THM_ORGANIZER_PROOF_DE"
               description="THM_ORGANIZER_PROOF_DE_DESC" hint="schriftliche Klausur"/>
        <field name="evaluation_de" type="text" size="20" label="THM_ORGANIZER_EVALUATION_DE"
               description="THM_ORGANIZER_EVALUATION_DE_DESC" hint="gem. § 9 der Allg. Bestimmungen (Teil I der PO)"/>
        <field name="description_de" type="editor" size="6" label="DESC_DE" description="THM_ORGANIZER_DESC_DE_DESC"/>
        <field name="objective_de" type="editor" size="6" label="OBJECTIVE_DE"
               description="THM_ORGANIZER_OBJECTIVE_DE_DESC"/>
        <field name="content_de" type="editor" size="6" label="CONTENT_DE" description="THM_ORGANIZER_CONTENT_DE_DESC"/>
        <field name="prerequisites_de" type="editor" size="6" label="PREREQUISITES_DE"
               description="THM_ORGANIZER_PREREQUISITES_DE_DESC"/>
        <field name="recommended_prerequisites_de" type="editor" size="6" label="RECOMMENDED_PREREQUISITES_DE"
               description="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_DE_DESC"/>
        <field name="used_for_de" type="editor" size="6" label="USED_FOR" description="THM_ORGANIZER_USED_FOR_DE_DESC"/>
        <field name="aids_de" type="editor" size="6" label="AIDS_DE" description="THM_ORGANIZER_AIDS_DE_DESC"/>
    </fieldset>
    <fieldset name="en_texts" label="ATTRIBUTES_EN">
        <field name="name_en" type="text" size="70" label="NAME_EN" description="THM_ORGANIZER_NAME_EN_DESC"
               hint="Fundamentals of Computer Science"/>
        <field name="short_name_en" type="text" size="70" label="THM_ORGANIZER_SHORT_NAME_EN"
               description="THM_ORGANIZER_SHORT_NAME_EN_DESC" hint="Fund. Comp. Sci."/>
        <field name="abbreviation_en" type="text" size="70" label="THM_ORGANIZER_ABBREVIATION_EN"
               description="THM_ORGANIZER_ABBREVIATION_DE_DESC" hint="FCS"/>
        <field name="method_en" type="text" size="70" label="METHOD_EN" description="THM_ORGANIZER_METHOD_EN_DESC"
               hint="2 SWS Lecture, 2 SWS Practice"/>
        <field name="preliminary_work_en" type="text" size="6" label="THM_ORGANIZER_PRELIMINARY_WORK_EN"
               description="THM_ORGANIZER_PRELIMINARY_WORK_EN_DESC"
               hint="Successful completion of six homework assignments."/>
        <field name="proof_en" type="text" size="70" label="THM_ORGANIZER_PROOF_EN"
               description="THM_ORGANIZER_PROOF_EN_DESC" hint="Written Exam"/>
        <field name="evaluation_en" type="text" size="6" label="THM_ORGANIZER_EVALUATION_EN"
               description="THM_ORGANIZER_EVALUATION_EN_DESC"
               hint="acc. § 9 of the gen. provisions (Part I of the PO)"/>
        <field name="description_en" type="editor" size="6" label="DESC_EN" description="THM_ORGANIZER_DESC_EN_DESC"/>
        <field name="objective_en" type="editor" size="6" label="OBJECTIVE_EN"
               description="THM_ORGANIZER_OBJECTIVE_EN_DESC"/>
        <field name="content_en" type="editor" size="6" label="CONTENT_EN" description="THM_ORGANIZER_CONTENT_EN_DESC"/>
        <field name="prerequisites_en" type="editor" size="6" label="PREREQUISITES_EN"
               description="THM_ORGANIZER_PREREQUISITES_EN_DESC"/>
        <field name="recommended_prerequisites_en" type="editor" size="6" label="RECOMMENDED_PREREQUISITES_EN"
               description="THM_ORGANIZER_RECOMMENDED_PREREQUISITES_EN_DESC"/>
        <field name="used_for_en" type="editor" size="6" label="USED_FOR" description="THM_ORGANIZER_USED_FOR_EN_DESC"/>
        <field name="aids_en" type="editor" size="6" label="AIDS_EN" description="THM_ORGANIZER_AIDS_EN_DESC"/>
    </fieldset>
    <fieldset name="advanced" label="ATTRIBUTES_SUBJECT_ADVANCED">
        <field name="coordinators" type="SubjectTeachers" responsibility="1" label="COORDINATORS"
               description="THM_ORGANIZER_MODULE_COORDINATORS_DESC">
            <option value="">NO_INPUT</option>
        </field>
        <field name="teachers" type="SubjectTeachers" responsibility="2" label="TEACHERS"
               description="THM_ORGANIZER_TEACHERS_DESC">
            <option value="">UNSPECIFIED_TEACHERS</option>
        </field>
        <field name="spacer4" type="spacer" hr="true"/>
        <field name="expertise" type="List" label="EXPERTISE" description="THM_ORGANIZER_EXPERTISE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
        <field name="method_competence" type="List" label="METHOD_COMPETENCE"
               description="THM_ORGANIZER_METHOD_COMPETENCE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
        <field name="self_competence" type="List" label="SELF_COMPETENCE"
               description="THM_ORGANIZER_SELF_COMPETENCE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
        <field name="social_competence" type="List" label="SOCIAL_COMPETENCE"
               description="THM_ORGANIZER_SOCIAL_COMPETENCE_DESC" default="">
            <option value=''>NO_STARS</option>
            <option value='0'>ZERO_STARS</option>
            <option value='1'>ONE_STAR</option>
            <option value='2'>TWO_STARS</option>
            <option value='3'>THREE_STARS</option>
        </field>
    </fieldset>
    <fieldset name="mappings" label="ATTRIBUTES_MAPPINGS" displayinitial="0">
        <field name="programID" type="ProgramMappings" label="PROGRAMS" description="THM_ORGANIZER_PROGRAMS_DESC"/>
        <field name="parentID" type="ParentPool" label="PARENT_POOLS" description="THM_ORGANIZER_PARENT_POOLS_DESC"/>
    </fieldset>
</form>
