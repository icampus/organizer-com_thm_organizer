<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="fields">
        <field name="startDate" type="calendar" default="NOW" label="DATE" format="%d.%m.%Y" class="input-small"
               todaybutton="true" minyear="-3" maxyear="1" translateLabel="false"/>
        <field name="interval" type="Options" label="INTERVAL" class="date-restriction-list"
               translateLabel="false">
            <option value="">INTERVAL_HINT</option>
            <option value="day">DAY</option>
            <option value="week">WEEK</option>
            <option value="month">MONTH</option>
            <option value="semester">SEMESTER</option>
        </field>
    </fieldset>
</form>