<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="untisID" type="text" required="true" disabled = "true" label="THM_ORGANIZER_UNTIS_ID"
               description="THM_ORGANIZER_UNTIS_ID_DESC"/>
        <field name="name_de" type="text" required="true" label="THM_ORGANIZER_NAME_DE"
               description="THM_ORGANIZER_NAME_DE_DESC"/>
        <field name="name_en" type="text"  required="true" label="THM_ORGANIZER_NAME_EN"
               description="THM_ORGANIZER_NAME_EN_DESC"/>
        <field name="departmentID" type="Departments" required="true" disabled = "true" label="DEPARTMENT"/>
        <field name="campusID" type="Campuses" required="true" label="CAMPUS"/>
        <field name="fieldID" type="GenericOptions" required="true" disabled = "true" label="FIELD" valuecolumn="id"
               textcolumn="name" localized="true" table="thm_organizer_fields">
            <option value="">NO_FIELD</option>
        </field>
        <field name="subjectNo" type="text" label="THM_ORGANIZER_SUBJECT"/>
        <field name="description_de" type="textarea" label="THM_ORGANIZER_DESC_DE"
               description="THM_ORGANIZER_DESC_DE_DESC"/>
        <field name="description_en" type="textarea" label="THM_ORGANIZER_DESC_EN"
               description="THM_ORGANIZER_DESC_EN_DESC"/>
        <field name="preparatory" type="Options" class="chzn-color-state" required="true" default="0"
               label="PREP_COURSES">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </field>
        <field name="deadline" type="integer" label="DEADLINE" description="DEADLINE_DESC"
               first="1" last="30" step="1" default="0"/>
        <field name="fee" type="Integer" label="COURSE_FEE" first="0" last="500" step="5" default="0"/>
        <field name="maxParticipants" type="integer" label="MAX_PARTICIPANTS"
               first="20" last="1000" step="20" default="1000"/>
        <field name="registrationType" type="Options" label="REGISTRATION_TYPE"
               description="THM_ORGANIZER_REGISTRATION_TYPE_DESC">
            <option value="">None</option>
            <option value="0">FIFO</option>
            <option value="1">Manual</option>
        </field>
    </fieldset>
</form>
