<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="programID" type="Programs" label="PROGRAM" access="document" onchange="this.form.submit();">
            <option value="">ALL_PROGRAMS</option>
            <option value="-1">NO_PROGRAMS</option>
        </field>
        <field name="fieldID" type="GenericList" label="FIELD" onchange="this.form.submit();" valuecolumn="f.id"
               textcolumn="f.field" localized="true"
               table="thm_organizer_pools AS p,thm_organizer_fields AS f ON p.fieldID = f.id">
            <option value="">ALL_FIELDS</option>
            <option value="-1">NO_FIELD</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" description=" LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>
