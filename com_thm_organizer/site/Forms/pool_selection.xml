<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fields name="filter">
        <field name="search" type="text" label="THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="programID" type="Programs" access="false" label="THM_ORGANIZER_PROGRAM"
               onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="fieldID" type="GenericList" valuecolumn="f.id" textcolumn="f.field" localized="true"
               table="thm_organizer_pools AS p,thm_organizer_fields AS f ON p.fieldID = f.id"
               label="THM_ORGANIZER_FIELD" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
        <field name="id" type="hidden"/>
        <field name="type" type="hidden"/>
    </fields>
</form>
