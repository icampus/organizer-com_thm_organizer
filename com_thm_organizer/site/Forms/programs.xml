<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="departmentID" type="Departments" label="DEPARTMENT" access="document"
               onchange="this.form.submit();">
            <option value="">ALL_DEPARTMENTS</option>
            <option value="-1">NO_DEPARTMENTS</option>
        </field>
        <field name="degreeID" type="GenericList" label="DEGREE" onchange="this.form.submit();" valuecolumn="d.id"
               textcolumn="d.abbreviation"
               table="thm_organizer_programs AS p,thm_organizer_degrees AS d ON p.degreeID = d.id">
            <option value="">ALL_DEGREES</option>
        </field>
        <field name="version" type="GenericList" label="VERSION" onchange="this.form.submit();" valuecolumn="version"
               textcolumn="version" table="thm_organizer_programs">
            <option value="">ALL_ACCREDITATION_YEARS</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" onchange="this.form.submit();"/>
    </fields>
</form>
