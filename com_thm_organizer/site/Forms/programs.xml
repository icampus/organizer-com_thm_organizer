<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="departmentID" type="Departments" label="DEPARTMENT" auth="1" onchange="this.form.submit();">
            <option value="">ALL_DEPARTMENTS</option>
            <option value="-1">NO_DEPARTMENTS</option>
        </field>
        <field name="degreeID" type="GenericList" valuecolumn="d.id" textcolumn="d.abbreviation"
               table="thm_organizer_programs AS p,thm_organizer_degrees AS d ON p.degreeID = d.id" label="DEGREE"
               onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="version" type="GenericList" valuecolumn="version" textcolumn="version"
               table="thm_organizer_programs" label="VERSION" onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="departmentID" type="GenericList" valuecolumn="d.id" textcolumn="d.short_name" localized="true"
               table="thm_organizer_programs AS p,thm_organizer_departments AS d ON d.id = p.departmentID"
               onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>
