<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="programID" type="Programs" label="PROGRAM" auth="0" onchange="this.form.submit();">
            <option value="">ALL_PROGRAMS</option>
            <option value="-1">NO_PROGRAMS</option>
        </field>
        <field name="poolID" type="Pools" label="POOL" auth="1" onchange="this.form.submit();">
            <option value="">ALL_POOLS</option>
            <option value="-1">NO_POOLS</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               onchange="this.form.submit();"/>
    </fields>
</form>
