<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="roomID" type="GenericOptions" label="ROOM" required="true" table="thm_organizer_rooms"
               valuecolumn="id" textcolumn="name">
            <option value="">SELECT_ROOM</option>
        </field>
        <field name="ip" type="text" label="THM_ORGANIZER_IP" description="THM_ORGANIZER_IP_DESC"
               class="required validate-ip" required="true" maxlength="15" default=""/>
        <field name="useDefaults" type="Options" label="DEFAULT_SETTINGS"
               description="THM_ORGANIZER_DEFAULT_SETTINGS_DESC" default="1">
            <option value='1'>YES</option>
            <option value='0'>NO</option>
        </field>
        <field name="display" type="Options" label="DISPLAY_BEHAVIOUR" required="true">
            <option value='1'>DAILY_PLAN</option>
            <option value='2'>MIXED_PLAN</option>
            <option value='3'>CONTENT_DISPLAY</option>
        </field>
        <field name="scheduleRefresh" type="Integer" label="SCHEDULE_REFRESH_RATE"
               description="THM_ORGANIZER_SCHEDULE_REFRESH_RATE_DESC" first="10" last="990" step="10" default="60"/>
        <field name="contentRefresh" type="Integer" label="CONTENT_REFRESH"
               description="THM_ORGANIZER_CONTENT_REFRESH_DESC" first="10" last="990" step="10" default="60"/>
        <field name="content" type="FileOptions" label="DISPLAY_CONTENT" directory="images/thm_organizer/" exclude=""/>
    </fieldset>
</form>
