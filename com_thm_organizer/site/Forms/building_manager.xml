<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/component/com_thm_organizer/Fields">
    <fields name="filter">
        <field name="search" type="text" label="THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="campusID" type="campusID" label="THM_ORGANIZER_NAME" onchange="this.form.submit();"
               placeholder="THM_ORGANIZER_FILTER_CAMPUS">
            <option value="">THM_ORGANIZER_ALL_CAMPUSES</option>
            <option value="-1">THM_ORGANIZER_NO_CAMPUS</option>
        </field>
        <field name="propertyType" type="list" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="0">THM_ORGANIZER_UNKNOWN</option>
            <option value="1">THM_ORGANIZER_OWNED</option>
            <option value="2">THM_ORGANIZER_RENTED</option>
            <option value="3">THM_ORGANIZER_USED</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               onchange="this.form.submit();"/>
    </fields>
</form>
