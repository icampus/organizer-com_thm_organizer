<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details" label="ATTRIBUTES_BASIC">
        <field name="id" type="hidden"/>
        <field name="asset_id" type="hidden" filter="unset"/>
        <field name="departmentID" type="Departments" label="DEPARTMENT" auth="1" required="true">
            <option value="">SELECT_DEPARTMENT</option>
        </field>
        <field name="lsfID" type="text" size="40" label="THM_ORGANIZER_LSF_ID" description="THM_ORGANIZER_LSF_ID_DESC"/>
        <field name="hisID" type="text" size="40" label="THM_ORGANIZER_HIS_ID" description="THM_ORGANIZER_HIS_ID_DESC"/>
        <field name="externalID" type="text" size="40" label="MODULE_ID" description="THM_ORGANIZER_MODULE_ID_DESC"/>
        <field name="fieldID" type="GenericList" label="FIELD" valuecolumn="id" textcolumn="field" localized="true"
               table="thm_organizer_fields">
            <option value="">NO_FIELDS</option>
        </field>
        <field name="minCrP" type="Integer" label="CRP_MIN" required="true" first="0" last="120" step="1" default="24"/>
        <field name="maxCrP" type="Integer" label="CRP_MAX" required="true" first="0" last="120" step="1" default="24"/>
    </fieldset>
    <fieldset name="de" label="ATTRIBUTES_DE">
        <field name="name_de" type="text" class="required" size="40" label="THM_ORGANIZER_NAME_DE"
               description="THM_ORGANIZER_NAME_DE_DESC" required="true"/>
        <field name="short_name_de" type="text" size="40" label="THM_ORGANIZER_SHORT_NAME_DE"
               description="THM_ORGANIZER_SHORT_NAME_DE_DESC"/>
        <field name="abbreviation_de" type="text" size="40" label="THM_ORGANIZER_ABBREVIATION_DE"
               description="THM_ORGANIZER_ABBREVIATION_DE_DESC"/>
        <field name="description_de" type="textarea" cols="30" row="3" label="THM_ORGANIZER_DESC_DE"
               description="THM_ORGANIZER_DESC_DE_DESC"/>
    </fieldset>
    <fieldset name="en" label="ATTRIBUTES_EN">
        <field name="name_en" type="text" class="required" size="40" label="THM_ORGANIZER_NAME_EN"
               description="THM_ORGANIZER_NAME_EN_DESC" required="true"/>
        <field name="short_name_en" type="text" size="40" label="THM_ORGANIZER_SHORT_NAME_EN"
               description="THM_ORGANIZER_SHORT_NAME_EN_DESC"/>
        <field name="abbreviation_en" type="text" size="40" label="THM_ORGANIZER_ABBREVIATION_EN"
               description="THM_ORGANIZER_ABBREVIATION_EN_DESC"/>
        <field name="description_en" type="textarea" cols="30" row="3" label="DESC_EN"
               description="THM_ORGANIZER_DESC_EN_DESC"/>
    </fieldset>
    <fieldset name="mapping" label="ATTRIBUTES_STRUCTURE" displayinitial="0">
        <field name="programID" type="ProgramMappings" access="true" label="PROGRAMS"
               description="THM_ORGANIZER_PROGRAMS_DESC" required="false"/>
        <field name="parentID" type="ParentPool" label="PARENT_POOLS" description="THM_ORGANIZER_PARENT_POOLS_DESC"
               required="false"/>
        <field name="children" type="Children" label="CHILDREN" description="THM_ORGANIZER_CHILDREN_DESC"/>
    </fieldset>
</form>
