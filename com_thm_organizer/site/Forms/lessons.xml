<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/component/com_thm_organizer/Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="status" type="List" label="STATE" onchange="this.form.submit();">
            <option value="">ALL_COURSES</option>
            <option value="pending">PENDING_COURSES</option>
            <option value="current">CURRENT_COURSES</option>
            <option value="expired">EXPIRED_COURSES</option>
        </field>
        <field name="departmentID" type="Departments" label="Department" auth="1" onchange="this.form.submit();">
            <option value="">ALL_DEPARTMENTS</option>
            <option value="-1">NO_DEPARTMENTS</option>
        </field>
        <field name="categoryID" type="Categories" label="CATEGORY" auth="1" onchange="this.form.submit();">
            <option value="">ALL_CATEGORIES</option>
            <option value="-1">NO_CATEGORIES</option>
        </field>
        <field name="groupID" type="Groups" label="GROUP" auth="1" onchange="this.form.submit();">
            <option value="">ALL_GROUPS</option>
            <option value="-1">NO_GROUPS</option>
        </field>
        <field name="campusID" type="Campuses" label="CAMPUS" onchange="this.form.submit();">
            <option value="">ALL_CAMPUSES</option>
            <option value="-1">NO_CAMPUSES</option>
        </field>
        <field name="methodID" type="GenericList" onchange="this.form.submit();" valuecolumn="id" textcolumn="name"
               table="thm_organizer_methods" localized="true">
            <option value="">JALL</option>
            <option value="-1">NONE</option>
        </field>
        <field name="onlyPrepCourses" type="List" label="PREP_COURSES" default="0">
            <option value="">ALL_COURSES</option>
            <option value="1">ONLY_PREP_COURSES</option>
            <option value="-1">NOT_PREP_COURSES</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               onchange="this.form.submit();"/>
    </fields>
</form>
