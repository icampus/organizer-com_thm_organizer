<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="city" type="GenericList" label="NAME" onchange="this.form.submit();" default="" valuecolumn="city"
               textcolumn="city" table="thm_organizer_campuses">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="gridID" type="GenericList" label="GRID" required="true" onchange="this.form.submit();"
               valuecolumn="id" textcolumn="name" localized="true" table="thm_organizer_grids">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" onchange="this.form.submit();"/>
    </fields>
</form>
