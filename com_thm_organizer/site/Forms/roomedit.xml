<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="untisID" type="text" size="40" label="THM_ORGANIZER_UNTIS_ID"
               description="THM_ORGANIZER_UNTIS_ID_DESC"/>
        <field name="name" type="text" size="40" label="THM_ORGANIZER_NAME" description="THM_ORGANIZER_NAME_DESC"
               required="true"/>
        <field name="buildingID" type="GenericOptions" label="BUILDING" valuecolumn="id" textcolumn="name"
               table="thm_organizer_buildings">
            <option value="">NO_INPUT</option>
        </field>
        <field name="typeID" type="GenericOptions" label="TYPE" required="true" valuecolumn="id" textcolumn="name"
               localized="true" table="thm_organizer_roomtypes">
            <option value="">SELECT_ROOMTYPE</option>
        </field>
        <field name="capacity" type="Integer" label="CAPACITY" last="500" step="1"/>
    </fieldset>
</form>
