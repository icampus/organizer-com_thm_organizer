<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="ip" type="GenericList" valuecolumn="ip" textcolumn="ip" table="thm_organizer_monitors" label="IP"
               onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="useDefaults" type="list" label="DEFAULT_SETTINGS" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">FILTER_DEFAULT_YES</option>
            <option value="0">FILTER_DEFAULT_NO</option>
        </field>
        <field name="display" type="list" label="DISPLAY_BEHAVIOUR" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">DAILY_PLAN</option>
            <option value="2">MIXED_PLAN</option>
            <option value="3">CONTENT_DISPLAY</option>
            <option value="4">LESSON_LIST</option>
        </field>
        <field name="content" type="GenericList" valuecolumn="content" textcolumn="content"
               table="thm_organizer_monitors" label="DISPLAY_CONTENT" onchange="this.form.submit();"
               valueParameter="content">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>
