<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fields name="filter">
        <field name="search" type="text" label="THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="ip" type="GenericList" valuecolumn="ip" textcolumn="ip" table="thm_organizer_monitors"
               label="THM_ORGANIZER_IP" onchange="this.form.submit();">
            <option value="">JALL</option>
        </field>
        <field name="useDefaults" type="list" label="THM_ORGANIZER_DEFAULT_SETTINGS" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">THM_ORGANIZER_FILTER_DEFAULT_YES</option>
            <option value="0">THM_ORGANIZER_FILTER_DEFAULT_NO</option>
        </field>
        <field name="display" type="list" label="THM_ORGANIZER_DISPLAY_BEHAVIOUR" class="inputbox"
               onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="1">THM_ORGANIZER_DAILY_PLAN</option>
            <option value="2">THM_ORGANIZER_MIXED_PLAN</option>
            <option value="3">THM_ORGANIZER_CONTENT_DISPLAY</option>
            <option value="4">THM_ORGANIZER_LESSON_LIST</option>
        </field>
        <field name="content" type="GenericList" valuecolumn="content" textcolumn="content"
               table="thm_organizer_monitors" label="THM_ORGANIZER_DISPLAY_CONTENT" onchange="this.form.submit();"
               valueParameter="content">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>
