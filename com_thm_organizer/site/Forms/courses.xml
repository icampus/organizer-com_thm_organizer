<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="text" label="FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="termID" type="Terms" label="TERM" onchange="this.form.submit();">
            <option value="">ALL_TERMS</option>
            <option value="-1">NO_TERM</option>
        </field>
        <field name="campusID" type="Campuses" label="CAMPUS" onchange="this.form.submit();">
            <option value="">ALL_CAMPUSES</option>
            <option value="-1">NO_CAMPUS</option>
        </field>
    </fields>
    <fields name="list">
        <field name="languageTag" type="Options" label="Language" onchange="this.form.submit();" default="de">
            <option value="de">GERMAN</option>
            <option value="en">ENGLISH</option>
        </field>
        <field name="limit" type="Limitbox" onchange="this.form.submit();"/>
    </fields>
</form>
