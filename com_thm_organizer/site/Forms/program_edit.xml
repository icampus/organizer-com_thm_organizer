<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details" label="ATTRIBUTES_BASIC">
        <field name="id" type="hidden"/>
        <field name="asset_id" type="hidden" filter="unset"/>
        <field name="departmentID" type="Departments" label="DEPARTMENT" auth="1" required="true"/>
        <field name="degreeID" type="GenericList" label="DEGREE" required="true" valuecolumn="id" textcolumn="name"
               table="thm_organizer_degrees">
            <option value="">NO_INPUT</option>
        </field>
        <field name="version" type="text" size="10" label="THM_ORGANIZER_VERSION"
               description="THM_ORGANIZER_VERSION_DESC" required="true"/>
        <field name="code" type="text" size="40" label="THM_ORGANIZER_LSF_FIELD_ID"
               description="THM_ORGANIZER_LSF_FIELD_ID_DESC" required="true"/>
        <field name="fieldID" type="GenericList" label="FIELD" required="true" valuecolumn="id" textcolumn="field"
               localized="true" table="thm_organizer_fields">
            <option value="">NO_FIELDS</option>
        </field>
        <field name="frequencyID" type="List" label="FREQUENCY" description="THM_ORGANIZER_FREQUENCY_DESC" default="3">
            <option value="3">AVAILABILITY_SEMESTER</option>
            <option value="5">AVAILABILITY_YEAR</option>
            <option value="1">AVAILABILITY_SUMMER</option>
            <option value="2">AVAILABILITY_WINTER</option>
        </field>
    </fieldset>
    <fieldset name="de" label="ATTRIBUTES_DE">
        <field name="name_de" type="text" maxlength="255" class="required" label="THM_ORGANIZER_NAME_DE"
               description="THM_ORGANIZER_NAME_DE_DESC" required="true"/>
        <field name="description_de" type="textarea" label="DESC" description="THM_ORGANIZER_DESC_DESC_DE"/>
    </fieldset>
    <fieldset name="en" label="ATTRIBUTES_EN">
        <field name="name_en" type="text" maxlength="255" class="required" label="THM_ORGANIZER_NAME_EN"
               description="THM_ORGANIZER_NAME_EN_DESC" required="true"/>
        <field name="description_en" type="textarea" label="DESC" description="THM_ORGANIZER_DESC_DESC_EN"/>
    </fieldset>
    <fieldset name="mapping" label="POOLS" displayinitial="0">
        <field name="children" type="Children" label="CHILDREN" description="THM_ORGANIZER_CHILDREN_DESC"/>
    </fieldset>
</form>