<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="name" type="Blank" label="NAME" class="required" maxlength="60" required="true" size="60"/>
        <field name="campusID" type="Campuses" label="CAMPUS">
            <option value="">NO_CAMPUS</option>
        </field>
        <field name="location" type="Blank" label="LOCATION" class="validate-gps" maxlength="20" size="60"/>
        <field name="address" type="Blank" label="ADDRESS" class="validate-german-address" maxlength="255" size="60"/>
        <field name="propertyType" type="Options" label="PROPERTY_TYPE" description="ORGANIZER_PROPERTY_TYPE_DESC">
            <option value="0">UNKNOWN</option>
            <option value="1">OWNED</option>
            <option value="2">RENTED</option>
            <option value="3">USED</option>
        </field>
    </fieldset>
</form>
