<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fields name="filter">
        <field name="search" type="text" label="THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="buildingID" type="GenericList" valuecolumn="id" textcolumn="name" table="thm_organizer_buildings"
               label="THM_ORGANIZER_BUILDING" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
        <field name="typeID" type="GenericList" valuecolumn="t.id" textcolumn="name" localized="true"
               table="thm_organizer_rooms AS r,thm_organizer_room_types AS t ON r.typeID = t.id"
               label="THM_ORGANIZER_TYPE" onchange="this.form.submit();">
            <option value="">JALL</option>
            <option value="-1">JNONE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>
