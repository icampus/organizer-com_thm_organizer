<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fields name="filter">
        <field name="search" type="text" label="THM_ORGANIZER_FILTER_SEARCH_DESC" hint="JSEARCH_FILTER"/>
        <field name="departmentID" type="departmentID" action="schedule" label="THM_ORGANIZER_DEPARTMENT"
               description="THM_ORGANIZER_DEPARTMENT_DESC" onchange="this.form.submit();">
            <option value="">THM_ORGANIZER_ALL_DEPARTMENTS</option>
        </field>
        <field name="planningPeriodID" type="planningPeriodID" label="THM_ORGANIZER_DEPARTMENT"
               description="THM_ORGANIZER_DEPARTMENT_DESC" onchange="this.form.submit();">
            <option value="">THM_ORGANIZER_ALL_PLANNING_PERIODS</option>
        </field>
        <field name="active" type="list" label="THM_ORGANIZER_STATE" onchange="this.form.submit();">
            <option value="">THM_ORGANIZER_ALL_STATES</option>
            <option value="1">THM_ORGANIZER_ACTIVE</option>
            <option value="0">THM_ORGANIZER_INACTIVE</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" label="COM_CONTENT_LIST_LIMIT"
               description="COM_CONTENT_LIST_LIMIT_DESC" onchange="this.form.submit();"/>
    </fields>
</form>
