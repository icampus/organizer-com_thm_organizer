<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="name" type="text" class="required" size="60" maxlength="60" label="THM_ORGANIZER_NAME"
               description="THM_ORGANIZER_NAME_DESC" required="true"/>
        <field name="campusID" type="Campuses" label="CAMPUS">
            <option value="">NO_CAMPUSES</option>
        </field>
        <field name="location" type="text" class="validate-gps" size="60" maxlength="20" label="THM_ORGANIZER_LOCATION"
               description="THM_ORGANIZER_LOCATION_DESC"/>
        <field name="address" type="text" class="validate-german-address" size="60" maxlength="255"
               label="THM_ORGANIZER_ADDRESS" description="THM_ORGANIZER_ADDRESS_DESC"/>
        <field name="propertyType" type="List" label="PROPERTY_TYPE" description="THM_ORGANIZER_PROPERTY_TYPE_DESC">
            <option value="0">UNKNOWN</option>
            <option value="1">OWNED</option>
            <option value="2">RENTED</option>
            <option value="3">USED</option>
        </field>
    </fieldset>
</form>
