<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="name" type="text" class="inputbox required" size="60" maxlength="60" label="THM_ORGANIZER_NAME"
               description="THM_ORGANIZER_NAME_DESC" required="true"/>
        <field name="campusID" type="Campuses" label="THM_ORGANIZER_CAMPUS">
            <option value="">THM_ORGANIZER_NO_CAMPUS</option>
        </field>
        <field name="location" type="text" class="inputbox validate-gps" size="60" maxlength="20"
               label="THM_ORGANIZER_LOCATION" description="THM_ORGANIZER_LOCATION_DESC"/>
        <field name="address" type="text" class="inputbox validate-german-address" size="60" maxlength="255"
               label="THM_ORGANIZER_ADDRESS" description="THM_ORGANIZER_ADDRESS_DESC"/>
        <field name="propertyType" type="list" label="THM_ORGANIZER_PROPERTY_TYPE"
               description="THM_ORGANIZER_PROPERTY_TYPE_DESC">
            <option value="0">THM_ORGANIZER_UNKNOWN</option>
            <option value="1">THM_ORGANIZER_OWNED</option>
            <option value="2">THM_ORGANIZER_RENTED</option>
            <option value="3">THM_ORGANIZER_USED</option>
        </field>
    </fieldset>
</form>
