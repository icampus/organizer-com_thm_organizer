<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="untisID" type="text" size="60" required="true" label="THM_ORGANIZER_UNTISID"
               description="THM_ORGANIZER_UNTISID_DESC"/>
        <field name="name_de" type="text" size="60" required="true" label="THM_ORGANIZER_NAME_DE"
               description="THM_ORGANIZER_NAME_DE_DESC"/>
        <field name="name_en" type="text" size="60" required="true" label="THM_ORGANIZER_NAME_EN"
               description="THM_ORGANIZER_NAME_EN_DESC"/>
        <field name="grid" type="periods" formsource="grid_blocks" multiple="true" buttons="add,remove"
               layout="joomla.form.field.subform.repeatable-table" label="GRID" description="THM_ORGANIZER_GRID_DESC"/>
        <field name="startDay" type="List" required="true" default="1" label="START_DAY"
               description="THM_ORGANIZER_START_DAY_DESC">
            <option value='1'>MONDAY</option>
            <option value='2'>TUESDAY</option>
            <option value='3'>WEDNESDAY</option>
            <option value='4'>THURSDAY</option>
            <option value='5'>FRIDAY</option>
            <option value='6'>SATURDAY</option>
            <option value='0'>SUNDAY</option>
        </field>
        <field name="endDay" type="List" required="true" default="6" label="END_DAY">
            <option value='1'>MONDAY</option>
            <option value='2'>TUESDAY</option>
            <option value='3'>WEDNESDAY</option>
            <option value='4'>THURSDAY</option>
            <option value='5'>FRIDAY</option>
            <option value='6'>SATURDAY</option>
            <option value='0'>SUNDAY</option>
        </field>
        <field name="defaultGrid" type="List" default="1" label="DEFAULT">
            <option value='1'>YES</option>
            <option value='0'>NO</option>
        </field>
    </fieldset>
</form>
