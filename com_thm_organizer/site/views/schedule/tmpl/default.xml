    <layout title="COM_THM_ORGANIZER_SCHEDULE_VIEW_TITLE">
        <message>COM_THM_ORGANIZER_SCHEDULE_VIEW_DESC</message>
    </layout>
    <fields name="params" addfieldpath="/media/com_thm_organizer/fields">
        <fieldset name="basic">
            <field name="departmentID" type="departmentlist" label="COM_THM_ORGANIZER_DEPARTMENT"
                   description="COM_THM_ORGANIZER_DEPARTMENT_DESC">
                <option value="0">JALL</option>
            </field>
            <field name="programIDs" type="genericlist" valuecolumn="id" textcolumn="name" multiple="true"
                   table="thm_organizer_plan_programs" label="COM_THM_ORGANIZER_PROGRAMS"
                   description="COM_THM_ORGANIZER_PROGRAMS_EXPORT_DESC">
                <option value="">JALL</option>
            </field>
            <field name="poolIDs" type="genericlist" valuecolumn="id" textcolumn="name" table="thm_organizer_plan_pools"
                   label="COM_THM_ORGANIZER_POOLS" description="COM_THM_ORGANIZER_POOLS_EXPORT_DESC" multiple="true">
                <option value="">JALL</option>
            </field>
            <field name="roomIDs" type="genericlist" valuecolumn="id" textcolumn="name" table="thm_organizer_rooms"
                   label="COM_THM_ORGANIZER_ROOMS" description="COM_THM_ORGANIZER_ROOMS_DESC" multiple="true">
                <option value="">JALL</option>
            </field>
            <field name="teacherIDs" type="genericlist" valuecolumn="id" textcolumn="surname"
                   table="thm_organizer_teachers" label="COM_THM_ORGANIZER_TEACHER"
                   description="COM_THM_ORGANIZER_TEACHERS_EXPORT_DESC" multiple="true">
                <option value="">JALL</option>
            </field>
            <field name="deltaDays" type="integer" class="inputbox" label="COM_THM_ORGANIZER_DELTA_DISPLAY_TITLE"
                   description="COM_THM_ORGANIZER_DELTA_DISPLAY_DESC" first="0" last="100" step="1" default="5"/>
            <field name="showDepartments" type="radio" class="inputbox" label="COM_THM_ORGANIZER_SHOW_DEPARTMENTS_TITLE"
                   description="COM_THM_ORGANIZER_SHOW_DEPARTMENTS_DESC" default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="showPrograms" type="radio" class="inputbox" label="COM_THM_ORGANIZER_SHOW_PROGRAMS_TITLE"
                   description="COM_THM_ORGANIZER_SHOW_PROGRAMS_DESC" default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="showTeachers" type="radio" class="inputbox" label="COM_THM_ORGANIZER_SHOW_TEACHERS_TITLE"
                   description="COM_THM_ORGANIZER_SHOW_TEACHERS_DESC" default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
            <field name="showRooms" type="radio" class="inputbox" label="COM_THM_ORGANIZER_SHOW_ROOMS_TITLE"
                   description="COM_THM_ORGANIZER_SHOW_ROOMS_DESC" default="1">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
</metadata>
