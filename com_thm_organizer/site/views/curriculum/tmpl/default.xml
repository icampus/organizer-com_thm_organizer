    </layout>
    <fields name="params" addfieldpath="/components/com_thm_organizer/Fields">
        <fieldset name="basic" label="THM_ORGANIZER_CURRICULUM_SETTINGS">
            <field name="programID" type="programID" access="false" class="inputbox" label="THM_ORGANIZER_PROGRAM"
                   description="THM_ORGANIZER_PROGRAM_DESC" required="true"/>
            <field name="initialLanguage" type="list" default="de" required="true" label="THM_ORGANIZER_LANGUAGE"
                   description="THM_ORGANIZER_LANGUAGE_DESC">
                <option value="de">THM_ORGANIZER_GERMAN</option>
                <option value="en">THM_ORGANIZER_ENGLISH</option>
            </field>
            <field name="displayECollabLink" type="list" default="0" class="chzn-color-state" required="true"
                   label="THM_ORGANIZER_DISPLAY_ECOLLAB" description="THM_ORGANIZER_DISPLAY_ECOLLAB_DESC">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>
        </fieldset>
    </fields>
