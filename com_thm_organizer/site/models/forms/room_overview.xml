<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/media/com_thm_organizer/fields">
    <fieldset name="fields">
        <field name="template" type="Templates" label="COM_THM_ORGANIZER_DISPLAY_RANGE" default="1"
               description="COM_THM_ORGANIZER_DISPLAY_RANGE_DESC" translateLabel="false">
            <option value="1">COM_THM_ORGANIZER_SINGLE_DAY</option>
            <option value="2">COM_THM_ORGANIZER_WEEK</option>
        </field>
        <field name="date" type="calendar" default="NOW" label="COM_THM_ORGANIZER_DATE" format="%d.%m.%Y"
               class="input-small" todaybutton="true" minyear="-3" maxyear="1" translateLabel="false"/>
        <field name="campusID" type="Campuses" label="COM_THM_ORGANIZER_CAMPUS" translateLabel="false">
            <option value="">COM_THM_ORGANIZER_ALL_CAMPUSES</option>
        </field>
        <field name="buildingID" type="Buildings" label="COM_THM_ORGANIZER_BUILDING" translateLabel="false">
            <option value="">COM_THM_ORGANIZER_ALL_BUILDINGS</option>
        </field>
        <field name="types" type="RoomTypes" label="COM_THM_ORGANIZER_ROOM_TYPES" multiple="true"
               translateLabel="false">
            <option value="">COM_THM_ORGANIZER_ALL_ROOM_TYPES</option>
        </field>
        <field name="rooms" type="Rooms" label="COM_THM_ORGANIZER_ROOMS" multiple="true" translateLabel="false">
            <option value="">COM_THM_ORGANIZER_ALL_ROOMS</option>
        </field>
    </fieldset>
</form>
