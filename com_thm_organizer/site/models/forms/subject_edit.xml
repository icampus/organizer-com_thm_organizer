        <field name="abbreviation_de" type="text" class="inputbox" size="70" label="COM_THM_ORGANIZER_ABBREVIATION_DE"
               description="COM_THM_ORGANIZER_ABBREVIATION_DE_DESC" hint="BKPr"/>
        <field name="description_de" type="editor" label="COM_THM_ORGANIZER_DESC_DE"
               description="COM_THM_ORGANIZER_DESC_DE_DESC"/>
        <field name="objective_de" type="editor" class="inputbox" size="6" label="COM_THM_ORGANIZER_OBJECTIVE_DE"
               description="COM_THM_ORGANIZER_OBJECTIVE_DE_DESC"/>
        <field name="content_de" type="editor" class="inputbox" size="6" label="COM_THM_ORGANIZER_CONTENT_DE"
               description="COM_THM_ORGANIZER_CONTENT_DE_DESC"/>
    </fieldset>
    <fieldset name="en_texts" label="COM_THM_ORGANIZER_ATTRIBUTES_EN">
