<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params" addfieldprefix="Organizer\Fields">
        <fieldset name="basic" label="THM_ORGANIZER_SETTINGS">
            <field name="rooms" type="GenericOptions" label="ROOMS" multiple="true" valuecolumn="id" textcolumn="name"
                   table="thm_organizer_rooms">
                <option value="">THM_ORGANIZER_FILTER_ALL_ROOMS</option>
            </field>
            <field name="days" type="Options" label="DAYS" multiple="true">
                <option value="">THM_ORGANIZER_FILTER_ALL_DAYS</option>
                <option value="1">MONDAY</option>
                <option value="2">TUESDAY</option>
                <option value="3">WEDNESDAY</option>
                <option value="4">THURSDAY</option>
                <option value="5">FRIDAY</option>
                <option value="6">SATURDAY</option>
                <option value="0">SUNDAY</option>
            </field>
            <field name="mySchedule" type="Options" label="MY_SCHEDULE_FILTER" default="0">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="myFinals" type="Options" label="MY_FINALS_FILTER" default="0">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="startDate" type="Date" label="START_DATE"/>
            <field name="endDate" type="Date" label="END_DATE"/>
        </fieldset>
    </fields>
</form>
