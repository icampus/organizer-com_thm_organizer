<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="params">
        <fieldset name="basic" label="THM_ORGANIZER_SETTINGS">
            <field name="rooms" type="GenericOptions" label="ROOMS" multiple="true" valuecolumn="id" textcolumn="name"
                   table="thm_organizer_rooms">
                <option value="">THM_ORGANIZER_FILTER_ALL_ROOMS</option>
            </field>
            <field name="days" type="Options" label="DAYS" multiple="true">
                <option value="">THM_ORGANIZER_FILTER_ALL_DAYS</option>
                <option value="1">MONDAY</option>
                <option value="2">TUESDAY</option>
                <option value="3">WEDNESDAY</option>
                <option value="4">THURSDAY</option>
                <option value="5">FRIDAY</option>
                <option value="6">SATURDAY</option>
                <option value="0">SUNDAY</option>
            </field>
            <field name="mySchedule" type="radio" label="THM_ORGANIZER_MY_SCHEDULE"
                   description="THM_ORGANIZER_MY_SCHEDULE_FILTER_DESC" default="0">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="myFinals" type="radio" label="THM_ORGANIZER_MY_FINALS"
                   description="THM_ORGANIZER_MY_FINALS_FILTER_DESC" default="0">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="startDate" type="calendar" label="THM_ORGANIZER_START_DATE" format="%Y-%m-%d"
                   description="THM_ORGANIZER_START_DATE_DESC"/>
            <field name="endDate" type="calendar" label="THM_ORGANIZER_END_DATE" format="%Y-%m-%d"
                   description="THM_ORGANIZER_END_DATE_DESC"/>
        </fieldset>
    </fields>
</form>
