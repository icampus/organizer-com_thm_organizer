<?xml version="1.0" encoding="utf-8"?>
<form addfieldpath="/components/com_thm_organizer/Fields">
    <fields name="params" addfieldpath="/components/com_thm_organizer/Fields">
        <fieldset name="basic" label="THM_ORGANIZER_SETTINGS">
            <field name="departmentID" type="Departments" label="THM_ORGANIZER_DEPARTMENT"
                   description="THM_ORGANIZER_DEPARTMENT_DESC" class="departmentlist">
                <option value="0">JALL</option>
            </field>
            <field name="categoryIDs" type="GenericList" valuecolumn="id" textcolumn="name" multiple="true"
                   table="thm_organizer_plan_programs" label="THM_ORGANIZER_CATEGORIES"
                   description="THM_ORGANIZER_CATEGORIES_DESC">
                <option value="">JALL</option>
            </field>
            <field name="groupIDs" type="GenericList" valuecolumn="id" textcolumn="name" table="thm_organizer_groups"
                   label="THM_ORGANIZER_POOLS" description="THM_ORGANIZER_POOLS_EXPORT_DESC" multiple="true">
                <option value="">JALL</option>
            </field>
            <field name="roomIDs" type="GenericList" valuecolumn="id" textcolumn="name" table="thm_organizer_rooms"
                   label="THM_ORGANIZER_ROOMS" description="THM_ORGANIZER_ROOMS_DESC" multiple="true">
                <option value="">JALL</option>
            </field>
            <field name="deltaDays" type="integer" label="THM_ORGANIZER_DELTA_DISPLAY_TITLE"
                   description="THM_ORGANIZER_DELTA_DISPLAY_DESC" first="0" last="100" step="1" default="5"/>
            <field name="showDepartments" type="radio" label="THM_ORGANIZER_SHOW_DEPARTMENTS_TITLE"
                   description="THM_ORGANIZER_SHOW_DEPARTMENTS_DESC" default="1">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showPrograms" type="radio" label="THM_ORGANIZER_SHOW_PROGRAMS_TITLE"
                   description="THM_ORGANIZER_SHOW_PROGRAMS_DESC" default="1">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showTeachers" type="radio" label="THM_ORGANIZER_SHOW_TEACHERS_TITLE"
                   description="THM_ORGANIZER_SHOW_TEACHERS_DESC" default="1">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showRooms" type="radio" label="THM_ORGANIZER_SHOW_ROOMS_TITLE"
                   description="THM_ORGANIZER_SHOW_ROOMS_DESC" default="1">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
        </fieldset>
    </fields>
</form>
