<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="params" addfieldprefix="Organizer\Fields">
        <fieldset name="basic" label="THM_ORGANIZER_SETTINGS">
            <field name="departmentID" type="Departments" label="DEPARTMENT" class="departmentlist">
                <option value="0">ALL_DEPARTMENTS</option>
            </field>
            <field name="categoryIDs" type="GenericOptions" label="CATEGORIES" multiple="true"
                   table="thm_organizer_categories" textcolumn="name" valuecolumn="id">
                <option value="">ALL_CATEGORIES</option>
            </field>
            <field name="groupIDs" type="GenericOptions" label="GROUPS" multiple="true" table="thm_organizer_groups"
                   textcolumn="name" valuecolumn="id">
                <option value="">ALL_GROUPS</option>
            </field>
            <field name="delta" type="Integer" label="SHOW_DELTA_DAYS" default="5" first="0" last="100" step="1"/>
            <field name="showCategories" type="Options" label="SHOW_CATEGORY_OPTIONS" default="1">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showPersons" type="Options" label="SHOW_PERSON_OPTIONS" default="1">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showRooms" type="Options" label="SHOW_ROOM_OPTIONS" default="1">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
        </fieldset>
    </fields>
</form>
