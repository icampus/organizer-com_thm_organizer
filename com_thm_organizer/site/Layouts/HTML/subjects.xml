<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="params">
        <fieldset name="basic" label="THM_ORGANIZER_SETTINGS">
            <field name="programID" type="Programs" label="PROGRAM" auth="0" required="true">
                <option value="">SELECT_PROGRAM</option>
            </field>
            <field name="initialLanguage" type="list" default="de" required="true" label="THM_ORGANIZER_LANGUAGE"
                   description="THM_ORGANIZER_LANGUAGE_DESC">
                <option value="de">GERMAN</option>
                <option value="en">ENGLISH</option>
            </field>
            <field name="grouping" type="list" default="0" label="THM_ORGANIZER_ORGANIZE_BY"
                   description="THM_ORGANIZER_ORGANIZE_BY_DESC">
                <option value="0">ALPHABETICAL</option>
                <option value="1">BY_SUBJECTNO</option>
                <option value="2">BY_GROUP</option>
                <option value="3">BY_TEACHER</option>
            </field>
            <field name="teacherResp" type="list" default="0" label="THM_ORGANIZER_SHOW_TEACHER_RESP"
                   description="THM_ORGANIZER_SHOW_TEACHER_RESP_DESC">
                <option value="0">ALL_RESPONSIBILITIES</option>
                <option value="2">TEACHER</option>
                <option value="1">COORDINATOR</option>
            </field>
            <field name="showTitle" type="list" default="1" label="THM_ORGANIZER_SHOW_TEACHER_TITLE"
                   description="THM_ORGANIZER_SHOW_TEACHER_TITLE_DESC">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="inlinePoolCrP" type="list" default="1" label="THM_ORGANIZER_SHOW_INLINE_CRP"
                   description="THM_ORGANIZER_SHOW_INLINE_CRP_DESC">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showByName" type="list" default="1" label="THM_ORGANIZER_SHOW_BY_NAME"
                   description="THM_ORGANIZER_SHOW_BY_NAME_DESC">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showByModuleNumber" type="list" default="1" label="THM_ORGANIZER_SHOW_BY_MODULE_NUMBER"
                   description="THM_ORGANIZER_SHOW_BY_MODULE_NUMBER_DESC">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showByPool" type="list" default="1" label="THM_ORGANIZER_SHOW_BY_POOL"
                   description="THM_ORGANIZER_SHOW_BY_POOL_DESC">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showByTeacher" type="list" default="1" label="THM_ORGANIZER_SHOW_BY_TEACHER"
                   description="THM_ORGANIZER_SHOW_BY_TEACHER_DESC">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
            <field name="showByField" type="list" default="0" label="THM_ORGANIZER_SHOW_BY_FIELD"
                   description="THM_ORGANIZER_SHOW_BY_FIELD_DESC">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
        </fieldset>
    </fields>
</form>
