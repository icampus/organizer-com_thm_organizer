<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="params" addfieldprefix="Organizer\Fields">
        <fieldset name="basic" label="THM_ORGANIZER_SETTINGS">
            <field name="programID" type="Programs" label="PROGRAM" required="true">
                <option value="">SELECT_PROGRAM</option>
            </field>
            <field name="initialLanguage" type="Options" default="de" required="true" label="LANGUAGE">
                <option value="de">GERMAN</option>
                <option value="en">ENGLISH</option>
            </field>
            <field name="role" type="Options" default="0" label="SHOW_PERSON_ROLE">
                <option value="0">ALL_ROLES</option>
                <option value="2">TEACHER</option>
                <option value="1">COORDINATOR</option>
            </field>
            <field name="showTitle" type="Options" default="1" label="SHOW_PERSON_TITLES">
                <option value="1">YES</option>
                <option value="0">NO</option>
            </field>
        </fieldset>
    </fields>
</form>
